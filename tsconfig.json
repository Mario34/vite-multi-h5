{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      },
      {
        "name": "ts-vue-plugin"
      },
    ],
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "/@r/*": [
        "./*"
      ]
    },
  },
  "include": [
    "pages/**/*.ts",
    "pages/**/*.d.ts",
    "pages/**/*.tsx",
    "pages/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}